<div class="todolist">
	<div class="title" id="<%= @todo_list.id %>">
		<%= @todo_list.name %>
	</div>

	<div class="list_items">
		<ul>
			<% @todo_list.list_items.each do |list_item| %>
				<li>
					<%= list_item.description %>
					<span>
						<%= link_to "x", todo_list_item_path(@todo_list, list_item), method: :delete %>
					</span>
				</li>
			<% end %>
		</ul>
		<button class="btn-add-item">+ item</button>
		<div class="new_form"></div>
	</div>

	<% if current_user.id == @todo_list.user.id %>
		<%= link_to "Update", edit_todo_list_path(@todo_list) %>
		<%= link_to "Delete", todo_list_path(@todo_list), method: :delete %>
	<% end %>
</div>