<h1>New Todo List</h1>

<%= simple_form_for @todo_list do |f| %>
	<%= f.input :user_id, as: :hidden, input_html: {value: current_user.id } %>
	<%= f.input :name, placeholder: 'My List' %>
	<%= f.input :private_todo, as: :boolean, checked_value: true, unchecked_value: false %>
	<%= f.button :submit, "Add" %>
<% end %>